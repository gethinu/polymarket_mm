{
  "name": "simmer-ab-observe",
  "description": "Observe-only watchdog for Simmer A/B baseline+candidate collectors.",
  "log_file": "logs/simmer_ab_supervisor.log",
  "state_file": "logs/simmer_ab_supervisor_state.json",
  "jobs": [
    {
      "name": "simmer_ab_baseline",
      "enabled": true,
      "command": [
        "python",
        "scripts/simmer_pingpong_mm.py",
        "--paper-trades",
        "--public-tag",
        "crypto",
        "--auto-select-count",
        "6",
        "--public-limit",
        "400",
        "--min-time-to-resolve-min",
        "5",
        "--prob-min",
        "0.02",
        "--prob-max",
        "0.98",
        "--spread-cents",
        "0.8",
        "--trade-shares",
        "5",
        "--max-inventory-shares",
        "10",
        "--min-trade-amount",
        "0.25",
        "--max-trade-amount",
        "5",
        "--poll-sec",
        "2",
        "--quote-refresh-sec",
        "60",
        "--metrics-sample-sec",
        "5",
        "--summary-every-sec",
        "60",
        "--daily-loss-limit-usd",
        "0",
        "--paper-seed-every-sec",
        "120",
        "--asset-quotas",
        "none",
        "--max-hold-sec",
        "60",
        "--sell-target-decay-cents-per-min",
        "0.05",
        "--log-file",
        "logs/simmer-ab-baseline.log",
        "--state-file",
        "logs/simmer_ab_baseline_state.json",
        "--metrics-file",
        "logs/simmer-ab-baseline-metrics.jsonl"
      ],
      "restart": "always",
      "restart_delay_sec": 3,
      "max_restarts_per_hour": 120
    },
    {
      "name": "simmer_ab_candidate",
      "enabled": true,
      "command": [
        "python",
        "scripts/simmer_pingpong_mm.py",
        "--paper-trades",
        "--public-tag",
        "crypto",
        "--auto-select-count",
        "6",
        "--public-limit",
        "400",
        "--min-time-to-resolve-min",
        "5",
        "--prob-min",
        "0.02",
        "--prob-max",
        "0.98",
        "--spread-cents",
        "0.8",
        "--trade-shares",
        "5",
        "--max-inventory-shares",
        "10",
        "--min-trade-amount",
        "0.25",
        "--max-trade-amount",
        "5",
        "--poll-sec",
        "2",
        "--quote-refresh-sec",
        "60",
        "--metrics-sample-sec",
        "5",
        "--summary-every-sec",
        "60",
        "--daily-loss-limit-usd",
        "0",
        "--paper-seed-every-sec",
        "120",
        "--asset-quotas",
        "bitcoin:2,ethereum:1,solana:1",
        "--max-hold-sec",
        "20",
        "--sell-target-decay-cents-per-min",
        "0.20",
        "--log-file",
        "logs/simmer-ab-candidate.log",
        "--state-file",
        "logs/simmer_ab_candidate_state.json",
        "--metrics-file",
        "logs/simmer-ab-candidate-metrics.jsonl"
      ],
      "restart": "always",
      "restart_delay_sec": 3,
      "max_restarts_per_hour": 120
    }
  ]
}
