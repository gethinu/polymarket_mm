{
  "name": "simmer-main-observe",
  "description": "Observe-only watchdog for primary Simmer paper profile (volatile1 seed-10m).",
  "log_file": "logs/simmer_main_supervisor.log",
  "state_file": "logs/simmer_main_supervisor_state.json",
  "jobs": [
    {
      "name": "simmer_main_volatile1_seed10m",
      "enabled": true,
      "command": [
        "python",
        "scripts/simmer_pingpong_mm.py",
        "--paper-trades",
        "--market-ids",
        "549d7810-d55a-4828-8362-607188699cd3",
        "--spread-cents",
        "0.4",
        "--trade-shares",
        "20",
        "--max-inventory-shares",
        "20",
        "--min-trade-amount",
        "0",
        "--max-trade-amount",
        "20",
        "--poll-sec",
        "0.5",
        "--quote-refresh-sec",
        "5",
        "--max-hold-sec",
        "180",
        "--sell-target-decay-cents-per-min",
        "1.0",
        "--summary-every-sec",
        "20",
        "--metrics-sample-sec",
        "2",
        "--paper-seed-every-sec",
        "120",
        "--daily-loss-limit-usd",
        "0",
        "--log-file",
        "logs/simmer-dryrun-volatile1-seed-10m.log",
        "--state-file",
        "logs/simmer_dryrun_volatile1_seed_10m_state.json",
        "--metrics-file",
        "logs/simmer-dryrun-volatile1-seed-10m-metrics.jsonl"
      ],
      "restart": "always",
      "restart_delay_sec": 3,
      "max_restarts_per_hour": 120
    }
  ]
}
