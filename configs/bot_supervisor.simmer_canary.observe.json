{
  "name": "simmer-canary-observe",
  "description": "Observe-only watchdog for seeded near240 ultrafast canary profile.",
  "log_file": "logs/simmer_canary_supervisor.log",
  "state_file": "logs/simmer_canary_supervisor_state.json",
  "jobs": [
    {
      "name": "simmer_canary_near240_ultrafast_seeded",
      "enabled": true,
      "command": [
        "python",
        "scripts/simmer_pingpong_mm.py",
        "--paper-trades",
        "--auto-select-count",
        "5",
        "--public-limit",
        "250",
        "--min-time-to-resolve-min",
        "1",
        "--max-time-to-resolve-min",
        "240",
        "--prob-min",
        "0.10",
        "--prob-max",
        "0.90",
        "--spread-cents",
        "0.4",
        "--trade-shares",
        "5",
        "--max-inventory-shares",
        "8",
        "--min-trade-amount",
        "0",
        "--max-trade-amount",
        "20",
        "--poll-sec",
        "0.5",
        "--quote-refresh-sec",
        "5",
        "--max-hold-sec",
        "120",
        "--sell-target-decay-cents-per-min",
        "3.0",
        "--summary-every-sec",
        "60",
        "--metrics-sample-sec",
        "2",
        "--paper-seed-every-sec",
        "120",
        "--daily-loss-limit-usd",
        "0",
        "--run-seconds",
        "14400",
        "--log-file",
        "logs/simmer-canary-near240-ultrafast.log",
        "--state-file",
        "logs/simmer_canary_near240_ultrafast_state.json",
        "--metrics-file",
        "logs/simmer-canary-near240-ultrafast-metrics.jsonl"
      ],
      "restart": "always",
      "restart_delay_sec": 3,
      "max_restarts_per_hour": 120
    }
  ]
}
